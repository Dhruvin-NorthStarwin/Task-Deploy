# Root .dockerignore for Railway Backend Deployment
# Only include backend files, exclude everything else

# Exclude frontend entirely
frontend/

# Exclude root level files not needed for backend
*.md
.git/
.gitignore

# Include backend directory but exclude its unnecessary files
backend/__pycache__/
backend/*.pyc
backend/.pytest_cache/
backend/tests/
backend/test_*.py
backend/*_test.py
backend/.coverage
backend/htmlcov/
backend/.env.development
backend/.env.example
backend/restro_manage.db
backend/temp/
backend/tmp/
backend/*.tmp
backend/*.temp

# Exclude Python cache files globally
__pycache__/
*.py[cod]
*$py.class
*.so

# Exclude virtual environments
venv/
env/
ENV/

# Exclude IDE files
.vscode/
.idea/
*.swp
*.swo

# Exclude OS files
.DS_Store
Thumbs.db

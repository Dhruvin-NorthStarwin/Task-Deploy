# Example Environment Variables - Copy to .env and customize
ENVIRONMENT=development

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./restro_manage.db
# DATABASE_URL=postgresql://postgres:password@localhost:5432/restro_manage

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
RATE_LIMIT_PER_MINUTE=60

# Database Pool (for production with PostgreSQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis
REDIS_URL=redis://localhost:6379

# File uploads
UPLOAD_DIRECTORY=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/gif"]
ALLOWED_VIDEO_TYPES=["video/mp4","video/avi","video/mov"]

# CORS
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]
